<header class="text-center">

  <img src="/assets/images/burger.png" />

  <h1>Eat-Da-Burger!</h1>

</header>

<section class="burgers">

  <div class="container">

    <div class="row">

      <div class="col">

        <ul class="not-devoured">
          {{#each burgers}}
            {{#unless devoured}}
              {{> burgers/burger-block devoured=false}}
            {{/unless}}
          {{/each}}
        </ul>

      </div>

      <div class="col">

        <ul class="devoured">
          {{#each burgers}}
            {{#if devoured}}
              {{> burgers/burger-block devoured=true}}
            {{/if}}
          {{/each}}
        </ul>
        
      </div>

    </div> <!-- /row -->

  </div> <!-- /container -->

</section>

<section>

  <div class="container">

    <div class="row">
      <div class="col-sm-8 offset-sm-2">

        <form class="create-form">
          <div class="form-group">
            <input type="text" id="burger-name" name="burger-name" class="form-control" placeholder="Enter a burger you would like to eat">
          </div>
          <button type="submit" class="btn btn-primary btn-lg btn-block">Add Burger</button>
        </form>

      </div>
    </div>

  </div> <!-- /container -->

</section>